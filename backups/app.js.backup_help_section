// Generate history table rows
function generateHistoryRows() {
  const allHistory = [
    ...dashboardData.recentActivity,
    {
      timestamp: "2025-10-09 15:45:12",
      type: "Phishing",
      risk: "High",
      url: "fake-amazon.com",
      user: "user6@company.com",
    },
    {
      timestamp: "2025-10-09 15:32:45",
      type: "Safe",
      risk: "Low",
      url: "google.com",
      user: "user7@company.com",
    },
    {
      timestamp: "2025-10-09 15:18:22",
      type: "Malware",
      risk: "High",
      url: "virus-download.net",
      user: "user8@company.com",
    },
    {
      timestamp: "2025-10-09 14:55:10",
      type: "Suspicious",
      risk: "Medium",
      url: "weird-link.org",
      user: "user9@company.com",
    },
    {
      timestamp: "2025-10-09 14:42:33",
      type: "Phishing",
      risk: "High",
      url: "fake-microsoft.com",
      user: "user10@company.com",
    },
  ];

  return allHistory
    .map(
      (item) => `
    <tr>
      <td>${item.timestamp}</td>
      <td><code>${item.url}</code></td>
      <td><span class="badge ${item.type.toLowerCase()}">${
        item.type
      }</span></td>
      <td><span class="badge ${item.risk.toLowerCase()}">${
        item.risk
      }</span></td>
      <td>${item.user}</td>
      <td><button class="btn-small">Details</button></td>
    </tr>
  `
    )
    .join("");
}

